<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ctlMenu"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zxn.tablayout.CommonTabLayout
        android:id="@+id/ctlMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tl_iconHeight="@dimen/dp_20"
        app:tl_iconWidth="@dimen/dp_20"
        app:tl_indicator_height="0dp"
        app:tl_textSelectColor="#111A34"
        app:tl_textUnselectColor="#858B9C"
        app:tl_textSize="@dimen/sp_10"
        app:tl_underline_color="@color/c_e2e4ea"
        app:tl_underline_height="0.5dp"
        app:tl_underline_gravity="TOP" />

</androidx.constraintlayout.widget.ConstraintLayout>